@using TennisCoach.Models
@model CoachRegisterViewModel


<form asp-action="RegCoach" method="post">
    <div class="form-group">
        <label>First Name</label>
        <input asp-for="FirstName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Last Name</label>
        <input asp-for="LastName" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input asp-for="Email" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Password</label>
        <input asp-for="Password" type="password" class="form-control" required />
    </div>
    <div class="form-group">
        <label>Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Register</button>
</form>


    <div style="text-align: center; margin-top: 20px;">
        <p style="color: #34495e;">Already have an account? <a href="@Url.Action("LoginCoach", "Account")" style="color: #3498db;">Login here</a>.</p>
    </div>
</div>
